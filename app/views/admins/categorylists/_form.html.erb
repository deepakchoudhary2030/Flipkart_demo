<%= form_for([:admins, @category]) do |form| %>
  <div class="form-outline mb-4">
    <%= form.label :name %><br>
    <%= form.text_field :name ,class: "form-control "  %>
  </div>
   <div class="form-outline mb-4">
      <%= form.label :image %>
      <%= form.file_field :cover %>
   </div>
  <div>
    <%=  form.submit :save, class: 'btn btn-success' %>
  </div>
<% end %>
</div>
