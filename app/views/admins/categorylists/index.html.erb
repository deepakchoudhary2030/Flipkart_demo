<div class="container">
  <% flash.each do |type,msg| %>
    <div class="alert alert-success">
      <%=msg %>
    </div>
    <% end %>
      <%=link_to 'create', new_admins_categorylist_path, class: 'btn btn-dark' %>
        <table class="table">
          <thead>
            <tr>
              <th scope="col">s.no</th>
              <th scope="col">Category</th>
              <th scope="col">Add</th>
              <th scope="col">Delete</th>
            </tr>
          </thead>
          <tbody>
            <% @categories.each do |category| %>
              <tr>
                <% if category.category_id==nil %>
                  <th scope="row">
                    <%=category.id %>
                  </th>
                  <td>
                    <%=link_to category.name ,admins_categorylist_path(category.id) %>
                  </td>
                  <td>
                    <%=link_to 'Edit', edit_admins_categorylist_path(category.id),class: "btn btn-primary"%>
                  </td>
                  <td>
                    <%=link_to 'Delete', admins_categorylist_path(category.id),class: "btn btn-danger" ,:method=> :delete, :confirm => 'Are you sure?' %></td>
              </tr>
              <% end %>
                <% end %>
          </tbody>
        </table>
</div>
<div class="container mb-5">
  <div class="container-fluid jumb1">
    <h1>Users</h1>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">s.no</th>
          <th scope="col">User Name</th>
          <th scope="col">Email</th>
          <th scope="col">Pincode</th>
          <th scope="col">User Type</th>
          <th scope="col">Delete</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <th scope="row">
              <%=user.id %>
            </th>
            <td>
              <%=user.user_name %>
            </td>
            <td>
              <%=user.email %>
            </td>
            <td>
              <%=user.pincode %>
            </td>
            <td>
              <%=user.user_type %>
            </td>
            <% if user.user_type=="admin" %>
              <td></td>
              <% else %>
                <td>
                  <%=link_to 'Delete', admins_user_path(user.id), :method=> :delete, :confirm => 'Are you sure?' %></td>
                <% end %>
          </tr>
          <% end %>
      </tbody>
    </table>
  </div>
</div>