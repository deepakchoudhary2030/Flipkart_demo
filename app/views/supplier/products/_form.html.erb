
<div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card shadow-5-strong">
          <div class="card-body p-5 ">
             <%=  form_for([:supplier,@product])do |form| %>
                <div class="form-outline mb-4">
                  <%= form.label :name %><br>
                  <%= form.text_field :name ,class: "form-control form-control-lg"  %>
                </div>
                <div class="form-outline mb-4">
                  <%= form.label :detail %><br>
                  <%= form.text_field :detail ,class: "form-control form-control-lg"  %>
                </div>
                <div class="form-outline mb-4">
                  <%= form.label :price %><br>
                  <%= form.text_field :price,class: "form-control form-control-lg"  %>
                </div>
                <div class="form-outline mb-4">
                  <%= form.label :Image %>
                  <%= form.file_field :cover %>
                </div>
                  <%= form.hidden_field( :categorylist_id)  %>
                <div>
                  <%= form.submit class:"btn btn-primary"%>
                </div>
              <% end %>

          </div>
        </div>
      </div>
    </div>
  </div>
